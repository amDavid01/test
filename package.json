    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@typescript/lib-dom": "npm:@types/web@^0.0.86",
    "@vitejs/plugin-react": "^4.2.1",
    "adm-zip": "^0.5.10",
