    "iframe-resizer": "^4.3.9",
    "polished": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-is": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
